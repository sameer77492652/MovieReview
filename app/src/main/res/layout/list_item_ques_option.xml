<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    >

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Ques 1- Who is the first cricketer to score 200 in one day international?"
        android:textSize="@dimen/text_size_small"
        android:gravity="center"
        android:textColor="@color/app_text_color_dark"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tvQuestion"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@+id/tvQuestion"
            android:id="@+id/ll2"
            android:layout_marginTop="5dp"
            >


            <TextView
                android:id="@+id/tvOptionA"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Story was engaging"
                android:lines="2"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/app_text_color_dark"
                android:background="@drawable/rounded_corner"
                android:layout_marginLeft="10dp"
                android:padding="14dp"
                />

            <TextView
                android:id="@+id/tvOptionB"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/tvOptionA"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:lines="2"
                android:padding="14dp"
                android:layout_marginRight="10dp"
                android:text="Writers hardly put any effort for thos jadsfhjksafjfsdhkdfsakdas hjaksfdhkjadshfkjafds jkasdkfjh"
                android:textColor="@color/app_text_color_dark"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ll2"

            >


            <TextView
                android:id="@+id/tvOptionC"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Story was terrible"
                android:gravity="center"
                android:lines="2"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textColor="@color/app_text_color_dark"
                android:background="@drawable/rounded_corner"
                android:layout_marginLeft="10dp"
                android:padding="14dp"
                />

            <TextView
                android:id="@+id/tvOptionD"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Writers hardly put any effort for thos"
                android:padding="14dp"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/tvOptionC"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:lines="2"
                android:textColor="@color/app_text_color_dark"
                android:background="@drawable/rounded_corner"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
